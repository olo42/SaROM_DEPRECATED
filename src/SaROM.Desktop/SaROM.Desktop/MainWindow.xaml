<Window x:Class="SaROM.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaROM.Desktop"
        mc:Ignorable="d"
        Title="Search and Rescue Operation Manager" 
        Height="768" 
        Width="1366" 
        MinHeight="768" 
        MinWidth="1024">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <DockPanel>
            <Menu DockPanel.Dock="Top">
                <MenuItem Header="Datei">
                    <MenuItem Header="Open"/>
                    <Separator></Separator>
                    <MenuItem Header="Beenden"/>
                </MenuItem>
                <MenuItem Header="Ansicht">
                    <MenuItem Header="Laufender Einsatz"/>
                    <MenuItem Header="Einsatzarchiv"/>
                    <MenuItem Header="Stammdaten"/>
                </MenuItem>
                <MenuItem Header="Drucken">
                    <MenuItem Header="Vermisstendaten"/>
                    <MenuItem Header="Funkzuweisungen"/>
                    <MenuItem Header="Einsatzprotokoll"/>
                </MenuItem>
                <MenuItem Header="Hilfe">
                    <MenuItem Header="Handbuch"/>
                    <Separator></Separator>
                    <MenuItem Header="Über SaROM"/>
                </MenuItem>
            </Menu>
            <StackPanel></StackPanel>
        </DockPanel>
        <ContentControl Name="cc_Main" Grid.Row="1" Background="#FFD83A3A" Margin="5" />
