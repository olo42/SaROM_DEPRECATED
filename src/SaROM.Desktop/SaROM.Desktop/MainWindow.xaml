<Window x:Class="SaROM.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaROM.Desktop"
        mc:Ignorable="d"
        Title="Search and Rescue Operation Manager" 
        Height="768" 
        Width="1366" 
        MinHeight="768" 
        MinWidth="1024">
    <Grid Margin="5" Name="grd_main">
        <Grid.RowDefinitions>
            <RowDefinition Name="grd_RowTop" Height="70"/>
            <RowDefinition Name="grd_RowContent" />
        </Grid.RowDefinitions>
        <Separator Grid.Row="0" Height="2" Background="#FFF5FF22" VerticalAlignment="Bottom" />
        <Label Grid.Row="0" Content="SaROM - Search and Rescue Operation Management" HorizontalAlignment="Left" 
               Margin="10,8,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <Image Grid.Row="0" Source="Images/Logo-WM-HKS14-4c.jpg" Stretch="Fill" HorizontalAlignment="Right" 
               VerticalAlignment="Top" Margin="0,20,30,0" Width="200" Height="32"/>
        <ContentControl Name="cc_Main" Grid.Row="1" Background="#FFD83A3A" Margin="15" />
    </Grid>
</Window>
